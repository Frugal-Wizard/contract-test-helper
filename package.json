{
  "name": "@frugal-wizard/contract-test-helper",
  "version": "0.4.0",
  "description": "This is a collection of helper functions and classes to help test Solidity smart contracts using mocha",
  "license": "MIT",
  "author": "Frugal-Wizard",
  "main": "dist/contract-test-helper.js",
  "repository": "https://github.com/Frugal-Wizard/contract-test-helper.git",
  "scripts": {
    "clean": "del dist",
    "compile": "tsc -p src",
    "build": "run-s clean compile",
    "test:clean": "del test/artifacts test/contracts-ts",
    "test:solc": "wsolc --optimize --output-dir test/artifacts test/contracts",
    "test:abi2ts": "abi2ts --output-dir test/contracts-ts test/artifacts",
    "test:mocha": "mocha",
    "prepare": "npm run build",
    "test": "run-s test:clean test:solc test:abi2ts test:mocha",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@frugal-wizard/abi2ts-lib": "^0.8.0",
    "ganache": "^7.7.4",
    "levelup": "^5.1.1",
    "memdown": "^6.1.1"
  },
  "peerDependencies": {
    "mocha": "^10",
    "mochawesome": "^7"
  },
  "peerDependenciesMeta": {
    "mochawesome": {
      "optional": true
    }
  },
  "devDependencies": {
    "@frugal-wizard/abi2ts": "^0.8.0",
    "@frugal-wizard/solidity-compiler-wrapper": "^1.2.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/levelup": "^5.1.2",
    "@types/memdown": "^3.0.1",
    "@types/mocha": "^10.0.1",
    "@types/mochawesome": "^6.2.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "npm-run-all": "^4.1.5",
    "solc": "^0.8.17",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
